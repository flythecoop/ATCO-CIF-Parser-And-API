<h1>Editing bus_stop</h1>

<% form_for(@bus_stop) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :ref_code %><br />
    <%= f.text_field :ref_code %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :publicity_point %><br />
    <%= f.check_box :publicity_point %>
  </p>
  <p>
    <%= f.label :working_point %><br />
    <%= f.check_box :working_point %>
  </p>
  <p>
    <%= f.label :timing_point %><br />
    <%= f.check_box :timing_point %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @bus_stop %> |
<%= link_to 'Back', bus_stops_path %>