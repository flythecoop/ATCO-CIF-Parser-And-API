<% @journey_stops.each do |journey_stop| %>
  <tr>
    <td><%= journey_stop.service_id %></td>
    <td><%= journey_stop.journey_detail_id %></td>
    <td><%= journey_stop.location %></td>
    <td><%= journey_stop.published_arrival_time %></td>
    <td><%= journey_stop.published_departure_time %></td>
    <td><%= journey_stop.bay_number %></td>
    <td><%= link_to 'Show', journey_stop %></td>
    <td><%= link_to 'Edit', edit_journey_stop_path(journey_stop) %></td>
    <td><%= link_to 'Destroy', journey_stop, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

